        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Kolo" parent="Base.Theme.Kolo" />

    <style name="splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/marron</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/logolay</item>

    </style>

    <style name="other" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/marron</item>
        <item name="android:navigationBarColor">@color/marron</item>

    </style>

    <style name="primary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/marron</item>
    </style>

    <style name="splash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="splash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

